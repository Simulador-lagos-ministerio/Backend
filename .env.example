# ============================================================
# HealthLakes Backend - .env.example
# Copy this file to ".env" and adjust values for your environment.
# NOTE: Do NOT commit real secrets in ".env" to version control.
# ============================================================

# -------------------------
# Runtime environment
# -------------------------
ENV=development
DEBUG=false

# -------------------------
# Database (single Postgres/PostGIS for everything)
# SQLAlchemy URL format:
#   postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
# -------------------------
POSTGIS_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/postgres

# DEV only: before Alembic is in place, set to true to auto-create tables.
# In production, this must be false and migrations should be used.
DB_INIT_ON_STARTUP=true

# -------------------------
# CORS (comma-separated)
# -------------------------
CORS_ORIGINS=http://localhost:5173

# -------------------------
# JWT (Access token)
# -------------------------
JWT_SECRET_KEY=CHANGE_ME_IN_PROD
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Refresh tokens
REFRESH_TOKEN_EXPIRE_DAYS=30

# -------------------------
# S3 / MinIO (dev defaults)
# -------------------------
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=lakes
S3_REGION=us-east-1
